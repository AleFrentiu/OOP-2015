<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="0 - 0" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scoreText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="@dimen/abc_action_bar_progress_bar_size" />

    <LinearLayout
        android:id="@+id/wrapper"
        android:layout_width="fill_parent" android:weightSum="1"
        android:orientation="vertical" android:layout_height="fill_parent"
        android:layout_below="@+id/scoreText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout android:id="@+id/row1" android:layout_width="match_parent" android:layout_weight="0.33" android:layout_height="0dp">
            <Button android:id="@+id/btn00"
                android:layout_width="0dp" android:layout_weight="1" android:layout_height="fill_parent"
                android:onClick="btn00Click"
                android:textSize="80dp"></Button>
            <Button android:id="@+id/btn01"
                android:layout_width="0dp" android:layout_weight="1" android:layout_height="fill_parent"
                android:onClick="btn01Click"
                android:textSize="80dp"></Button>
            <Button android:id="@+id/btn02"
                android:layout_width="0dp" android:layout_weight="1" android:layout_height="fill_parent"
                android:onClick="btn02Click"
                android:textSize="80dp"></Button>
        </LinearLayout>
        <LinearLayout android:id="@+id/row2" android:layout_width="match_parent" android:layout_weight="0.33" android:layout_height="0dp">
            <Button android:id="@+id/btn10"
                android:layout_width="0dp" android:layout_weight="1" android:layout_height="fill_parent"
                android:onClick="btn10Click"
                android:textSize="80dp"></Button>
            <Button android:id="@+id/btn11"
                android:layout_width="0dp" android:layout_weight="1" android:layout_height="fill_parent"
                android:onClick="btn11Click"
                android:textSize="80dp"></Button>
            <Button android:id="@+id/btn12"
                android:layout_width="0dp" android:layout_weight="1" android:layout_height="fill_parent"
                android:onClick="btn12Click"
                android:textSize="80dp"></Button>
        </LinearLayout>
        <LinearLayout android:id="@+id/row3" android:layout_width="match_parent" android:layout_weight="0.33" android:layout_height="0dp">
            <Button android:id="@+id/btn20"
                android:layout_weight="1" android:layout_width="0dp" android:layout_height="fill_parent"
                android:onClick="btn20Click"
                android:textSize="80dp"></Button>
            <Button android:id="@+id/btn21"
                android:layout_weight="1" android:layout_width="0dp" android:layout_height="fill_parent"
                android:onClick="btn21Click"
                android:textSize="80dp"></Button>
            <Button android:id="@+id/btn22"
                android:layout_weight="1" android:layout_width="0dp" android:layout_height="fill_parent"
                android:onClick="btn22Click"
                android:textSize="80dp"></Button>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
